{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts",
    "src/**/__mocks__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
